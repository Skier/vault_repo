<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
    horizontalAlign="center" verticalAlign="middle"
    horizontalGap="2" paddingLeft="2" paddingRight="2"
    horizontalScrollPolicy="off" verticalScrollPolicy="off">

    <mx:Script>
        <![CDATA[
            [Embed(source="assets/icons16/page_white_acrobat.png")]
            [Bindable]
            private var imgOpen:Class;
            
            [Embed(source="assets/icons16/add.png")]
            [Bindable]
            private var imgAdd:Class;
        ]]>
    </mx:Script>

    <mx:Image source="{imgOpen}" width="16" height="16" toolTip="Open Submittal"/>
    
    <mx:Image source="{imgAdd}" width="16" height="16" toolTip="Add To Package"/>
</mx:HBox>
