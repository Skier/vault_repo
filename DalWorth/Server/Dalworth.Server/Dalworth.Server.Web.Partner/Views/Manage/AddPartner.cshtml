@model Dalworth.Server.Web.Partner.Models.Partner

@{
    ViewBag.Title = "Partner In Profit - Add Partner";
    ViewBag.Header = "Add Partner";

    ViewBag.ActiveTopMenu = "Manage";
    ViewBag.ActiveSubMenu = "Partners";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddPartner", "Manage", FormMethod.Post, new { id = "AddPartnerForm" })) {
    if (!MvcHtmlString.IsNullOrEmpty(Html.ValidationSummary(true))){
		<div id="message-red">
		<table border="0" width="500px" cellpadding="0" cellspacing="0">
		<tr>
			<td class="red-left">
                @Html.ValidationSummary(true)
			<td class="red-right"><a class="close-red"><img src="../Content/images/table/icon_close_red.gif"   alt="" /></a></td>
		</tr>
		</table>
		</div>        
    }   

	<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
    <tr>
		<th valign="top">Partner Name</th>
		<td>
            @Html.TextBoxFor(model => model.Name, new { @class="field-input" })            
        </td>
		<td>
            @Html.ValidationMessageFor(model => model.Name)
        </td>
	</tr>

	<tr>
		<th>&nbsp;</th>
		<td valign="top">
			<input type="submit" value="" class="form-submit" />			
		</td>
		<td></td>
	</tr>

    </table>
}
<br>
<br>
<br>
@Html.ActionLink("Back to Manage Partners", "Partners", new { controller = "Manage" }, new { @class="back-link" })

