@model Dalworth.Server.Web.Partner.Models.AdvertisingSource

@{
    ViewBag.Title = "Partner In Profit - Assign Advertising Source";
    ViewBag.Header = "Assign Advertising Source";

    ViewBag.ActiveTopMenu = "Manage";
    ViewBag.ActiveSubMenu = "Partners";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AssignAdvertisingSource", "Manage", FormMethod.Post, new { id = "AssignAdvertisingSource" })) {
    if (!MvcHtmlString.IsNullOrEmpty(Html.ValidationSummary(true))){
		<div id="message-red">
		<table border="0" width="500px" cellpadding="0" cellspacing="0">
		<tr>
			<td class="red-left">
                @Html.ValidationSummary(true)
			<td class="red-right"><a class="close-red"><img src="../Content/images/table/icon_close_red.gif"   alt="" /></a></td>
		</tr>
		</table>
		</div>        
    }   
	<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
    <tr>
		<th valign="top">Advertising Source</th>
		<td>            
            @Html.TextBoxFor(model => model.AdvertisingSourceCode, new { @class="field-input" })            
        </td>
		<td>
            @Html.ValidationMessageFor(model => model.AdvertisingSourceCode)
        </td>
	</tr>
    <tr>
		<th valign="top">Tracking Url</th>
		<td>            
            @Html.TextBoxFor(model => model.TrackingUrl, new { @class="field-input" })            
        </td>
		<td>
            @Html.ValidationMessageFor(model => model.TrackingUrl)
        </td>
	</tr>

	<tr>
		<th>&nbsp;</th>
		<td valign="top">
			<input type="submit" value="" class="form-submit" />			
		</td>
		<td></td>
	</tr>

    </table>    
}
<br>
<br>
<br>
<a href='@("Partner?PartnerId=" + Session["CurrentPartnerId"])' class='back-link'>Back to Partner Details</a>
