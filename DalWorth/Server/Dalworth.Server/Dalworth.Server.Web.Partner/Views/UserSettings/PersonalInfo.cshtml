@model Dalworth.Server.Web.Partner.Models.PersonalInfoModel

@{
    ViewBag.Title = "Partner In Profit - Personal Info";
    ViewBag.Header = "Personal Info";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("PersonalInfo", "UserSettings", FormMethod.Post, new { id = "PersonalInfoForm" })) {
    @Html.ValidationSummary(true)

	<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
	<tr>
		<th valign="top">Partner Name</th>
		<td>
            @Model.OrderSource
        </td>
		<td></td>
	</tr>

	<tr>
		<th valign="top">Email</th>
		<td>
            @Model.Email
        </td>
		<td></td>
	</tr>	

    <tr>
		<th valign="top">First Name</th>
		<td>
            @Html.TextBoxFor(model => model.FirstName, new { @class="field-input" })            
        </td>
		<td>
            @Html.ValidationMessageFor(model => model.FirstName)
        </td>
	</tr>

    <tr>
		<th valign="top">Last Name</th>
		<td>
            @Html.TextBoxFor(model => model.LastName, new { @class="field-input" })            
        </td>
		<td>
            @Html.ValidationMessageFor(model => model.LastName)
        </td>
	</tr>

	<tr>
		<th>&nbsp;</th>
		<td valign="top">
			<input type="submit" value="" class="form-submit"/>
		</td>
		<td></td>
	</tr>

    </table>

}


