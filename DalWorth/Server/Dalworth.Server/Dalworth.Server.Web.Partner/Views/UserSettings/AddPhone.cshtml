@model Dalworth.Server.Web.Partner.Models.OwnPhone

@{
    ViewBag.Title = "Partner In Profit - Add Personal Phone";
    ViewBag.Header = "Add Personal Phone";

}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddPhone", "UserSettings", FormMethod.Post, new { id = "AddPhoneForm" })) {
    if (!MvcHtmlString.IsNullOrEmpty(Html.ValidationSummary(true))){
		<div id="message-red">
		<table border="0" width="500px" cellpadding="0" cellspacing="0">
		<tr>
			<td class="red-left">
                @Html.ValidationSummary(true)
			<td class="red-right"><a class="close-red"><img src="../Content/images/table/icon_close_red.gif"   alt="" /></a></td>
		</tr>
		</table>
		</div>        
    }       

	<table border="0" cellpadding="0" cellspacing="0"  id="id-form">
    <tr>
		<th valign="top">Phone Number</th>
		<td>
            @Html.TextBoxFor(model => model.PhoneNumber, new { @class="field-input" })            
        </td>
		<td>
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </td>
	</tr>

	<tr>
		<th>&nbsp;</th>
		<td valign="top">
			<input type="submit" value="" class="form-submit" />			
		</td>
		<td></td>
	</tr>

    </table>
}
@Html.ActionLink("Back to Manage Phones", "ManagePhones", new { controller = "UserSettings" }, new { @class="back-link" })

